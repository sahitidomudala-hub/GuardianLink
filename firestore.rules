rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == userId;
    }
    
    match /students/{studentId} {
      allow read, write: if isSignedIn() && getUserRole() == 'mentor';
      allow read, update: if isSignedIn() && 
                     getUserRole() == 'student' && 
                     resource.data.email == request.auth.token.email;
      allow read: if isSignedIn() && 
                     getUserRole() == 'parent' && 
                     resource.data.parentEmail == request.auth.token.email;
    }
    
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && (
        resource.data.studentEmail == request.auth.token.email ||
        resource.data.parentEmail == request.auth.token.email
      );
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.studentEmail == request.auth.token.email ||
        resource.data.parentEmail == request.auth.token.email
      );
    }
    
    match /meetingRequests/{requestId} {
      // Mentors can read and manage all requests
      allow read, write: if isSignedIn() && getUserRole() == 'mentor';
      // Students and parents can create requests
      allow create: if isSignedIn() && (getUserRole() == 'student' || getUserRole() == 'parent');
      // Requesters can read their own requests
      allow read: if isSignedIn() && (
        resource.data.studentEmail == request.auth.token.email ||
        resource.data.parentEmail == request.auth.token.email
      );
    }
    
    // WebRTC call signaling data
    match /calls/{callId}/{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
